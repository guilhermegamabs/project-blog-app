<h3>New Category: </h3>
<div class="card">
  <div class="card-body">
    <form action="/admin/categories/new" method="POST">
      <label for="name">Name: </label>
      <input type="text" name="name" id="iname" placeholder="Categorie Name" class="form-control">
      <label for="slug">Slug: </label>
      <input type="text" name="slug" id="islug" placeholder="Categorie Slug" class="form-control">
      <br>
      <button type="submit" class="btn btn-success">Create Category</button>
    </form>
  </div>
</div>

{{#each errors}}
  <div class="alert alert-danger mt-3">{{text}}</div>
{{else}}

{{/each}}