{{#each errors}}  
  <div class="alert alert-danger">{{text}}</div>

{{else}}

{{/each}}

<div class="card">
  <div class="card-body">
    <h4>New Post</h4>
    <form action="/admin/posts/new" method="POST">
      <label for="title">Title:</label>
      <input type="text" name="title" id="ititle" class="form-control">
      <label for="slug">Slug:</label>
      <input type="text" name="slug" id="islug" class="form-control">
      <label for="description">Description:</label>
      <input type="text" name="description" id="idescription" class="form-control">
      <label for="content">Content:</label>
      <textarea name="content" id="icontent" cols="30" rows="10" class="form-control"></textarea>
      <label for="category">Category:</label>
      <select name="category" id="icategory" class="form-select">
        {{#each categories}}
          <option value="{{_id}}">{{name}}</option>
        {{else}}
          <option value="0">No category registered</option>
        {{/each}}
      </select>
      <button class="btn btn-success btn-sm mt-3" type="submit">Create Post</button>
    </form>
  </div>
</div>